<table style="width: 100%;">
  <tr>
  <th>
      Image
  </th>
  <th>
      Name
  </th>
  <th>
      Price
  </th>
  <th>
      Ingredients
  </th>
  <th>
      Action
  </th>
  </tr>
  <% for(const Product of Products) {%>
  <tr>
  <td style="display: none ;">
      <%= Product.id %>
  </td>
  <td> 
      <div class="w3-container w3-padding-16">
      <img src="assets/images/sandwich" class="w3-circle w3-margin-right" style="width:46px">
      </div>
  </td>

  <td> 
      <div class="w3-container w3-padding-16">
      <%= Product.image %>
      </div>
  </td>

  <td> 
      <div class="w3-container w3-padding-16">
      <%= Product.name %>
      </div>
  </td>

  <td> 
      <div class="w3-container w3-padding-16">
      <%= Product.price %>
      </div>
  </td>

  <td> 
      <div class="w3-container w3-padding-16">
      <%= Product.ingredients %>
      </div>
  </td>

  <td>
      <div class="btn-group-center">
      <button class="w3-button w3-green">Edit</button>
      <button class="w3-button w3-green">Delete</button>       
      </div>
  </td>         
  </tr>
  <% } %>
</table>