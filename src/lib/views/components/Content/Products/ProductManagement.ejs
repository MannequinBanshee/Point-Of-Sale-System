<div class="w3-center">
  <div class="w3-panel">
    <div class="w3-row-padding" style="margin:0 -16px;">
        <h5>Product Management</h5>
        <div class="w3-row-padding w3-margin-bottom">
          <div class="w3-block w3-padding">
            <div class="search m4">
              <input id="ProductSearch" class="w3-input w3-border w3-padding" onkeyup="FilterProductSearch()" type="text" placeholder="Search...">
              <button class="w3-button w3-teal"><i class="fa fa-search"></i></button>
            </div>
          </div>
          <div class="w3-col w3-padding">
            <div class="btn-group w3-right">
              <button onclick="ToggleModal('NewProductModal');GetAllIngredients();" class="w3-button w3-teal w3-round" >Add Product</button>
              <button onclick="ToggleModal('LoaderModal');RefreshProducts();" class="w3-button w3-teal w3-round"><i class="fa fa-refresh"></i></button>
            </div>
          </div>
        </div>
        <div id="ProductManagementTable" style="overflow-y: scroll;max-height: 400px;" class="w3-row-padding w3-margin-bottom">
        </div>
    </div>
  </div>
</div>
  