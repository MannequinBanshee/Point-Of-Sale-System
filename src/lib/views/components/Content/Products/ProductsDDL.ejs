<div class="w3-row-padding" style="margin:0 -16px;">
    <div class="w3-row-padding w3-margin-bottom">
      <div class="w3-block w3-padding">
        <div class="search m4">
            <input id="SelectedCardPurchaseProduct" class="w3-input w3-border w3-padding" autocomplete="off" type="search" list=AvailableCardPurchaseProducts placeholder="Search Product" name="CardPurchaseProduct" required>
            <button class="w3-button w3-teal" type="button" onclick="AddProductToPurchaseForm();">Add</button>
        </div>
      </div>
    </div>
</div>

<datalist id="AvailableCardPurchaseProducts">
    <%for(const Product of Products){ %>               
    <option  
    <%=`data=${Product.id}`%> 
    ><%= `${Product.name} - R${Product.price}` %></option>
    <%}%>
</datalist>  