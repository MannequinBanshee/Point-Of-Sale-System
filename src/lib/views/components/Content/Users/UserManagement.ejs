<div class="w3-center">
  <div class="w3-panel">
    <div class="w3-row-padding" style="margin:0 -16px;">
        <h5>User Management</h5>
        <div class="w3-row-padding w3-margin-bottom">
          <div class="w3-block w3-padding">
            <div class="search m4">
              <input id="UserSearch" class="w3-input w3-border w3-padding" onkeyup="FilterSearch()" type="text" placeholder="Search...">
              <button class="w3-button w3-teal"><i class="fa fa-search"></i></button>
            </div>
          </div>
          <div class="w3-col w3-padding">
            <div class="btn-group w3-right">
              <% 
              
              var UserManagementAdmin = false;
             
              for(const access of Data.Access){

                if(access.AccessName.toUpperCase() == "USERMANAGEMENT" && access.AuthorityLevel.toUpperCase() == "ADMINISTRATOR"){
                  UserManagementAdmin = true;
                }
              }

              if(UserManagementAdmin){ %>

                <button onclick="ToggleModal('NewAdminModal');GetAdminRoles();;" class="w3-button w3-teal">Add Admin</button>
                <button onclick="ToggleModal('NewStaffModal');GetStaffRoles();" class="w3-button w3-teal">Add Staff</button>

              <% } %>
              <button onclick="GetAllUsers();" class="w3-button w3-teal"><i class="fa fa-refresh"></i></button>
            </div>
          </div>
        </div>
        <div id="UserManagementTable" style="overflow-y: scroll;max-height: 400px;" class="w3-row-padding w3-margin-bottom">
        </div>
    </div>
  </div>
</div>

