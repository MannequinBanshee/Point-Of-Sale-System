<div class="w3-modal-content w3-round w3-card-4 w3-animate-zoom" style="max-width:600px">
    <span onclick="document.getElementById('NewStaffModal').style.display='none'"
    class="w3-button w3-display-topright">&times;</span>
    <div class="w3-center"><br>
    <img src="assets/images/staff.png" style="width:30%" class="w3-margin-top">
    <h2><b>New Staff Member</b></h2>
    </div>
    <form id="RegisterNewStaffForm" class="w3-container" onsubmit="return false">
    <div class="w3-section">
        <table style="width:100%;">
            <tr>
                <td>
                    <label><b>Username</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" autocomplete="off" placeholder="Enter Username" name="username" readonly onfocus="this.removeAttribute('readonly');" required>
                </td>
                <td>
                    <label><b>Email Address</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" autocomplete="off" type="email" placeholder="Enter Email Address" name="email" readonly onfocus="this.removeAttribute('readonly');" required>                   
                </td>
            </tr>
            <tr>
                <td>
                    <label><b>First Name</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" autocomplete="off" type="text" placeholder="Enter First Name" name="firstname" readonly onfocus="this.removeAttribute('readonly');" required>
                </td>
                <td>
                    <label><b>Last Name</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" autocomplete="off" type="text" placeholder="Enter Last Name" name="lastname" readonly onfocus="this.removeAttribute('readonly');" required>                   
                </td>
            </tr>
            <tr>
                <td>
                    <label><b>Password</b></label>
                    <input class="w3-input w3-border" type="password" autocomplete="off" placeholder="Enter Password" name="password" readonly onfocus="this.removeAttribute('readonly');" required>
                </td>
                <td>
                    <label><b>Confirm Password</b></label>
                    <input class="w3-input w3-border" type="password" autocomplete="off" placeholder="Confirm Password" name="confirmpassword" readonly onfocus="this.removeAttribute('readonly');" required>  
                    <input id="AssignedStandardRolesList" type="hidden" name="roles" value="" required>     
                </td>
            </tr>
        </table>
        <div id="NewStaffRoles" style="margin-top: 20px;">
        </div>
        <div style="float: right">
            <input class="w3-button w3-round w3-green w3-section w3-padding w3-round" onclick="ValidateNewStaffForm()" type="submit" value="Register">    
        </div>
    </div>
    </form>

</div>