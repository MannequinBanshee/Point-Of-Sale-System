<div class="w3-modal-content w3-card-4 w3-animate-zoom" style="max-width:600px">
    <span onclick="document.getElementById('NewUserModal').style.display='none'"
    class="w3-button w3-display-topright">&times;</span>
    <div class="w3-center"><br>
    <img src="assets/images/cash-register.png" style="width:30%" class="w3-margin-top">
    </div>

    <form class="w3-container" action="/register" method="post">
    <div class="w3-section">
        <label><b>Username</b></label>
        <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="Enter Username" name="username" required>
        <table style="width:100%;">
            <tr>
                <td>
                    <label><b>First Name</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="Enter First Name" name="lastname" >
                </td>
                <td>
                    <label><b>Last Name</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="Enter Last Name" name="lastname" >                   
                </td>
            </tr>
            <tr>
                <td>
                    <label><b>Password</b></label>
                    <input class="w3-input w3-border" type="password" placeholder="Enter Password" name="password" required>
                </td>
                <td>
                    <label><b>Confirm Password</b></label>
                    <input class="w3-input w3-border" type="password" placeholder="Confirm Password" name="confirmedpassword" required>                
                </td>
            </tr>
        </table>
        <label><b>Role</b></label>
        <input class="w3-input w3-border" type="text" name="city" list="roles" placeholder="Chose Role" name="role" required>
        <datalist id="roles">
          <option value="admin">
          <option value="customer">
        </datalist>
        <input  class="w3-button w3-block w3-green w3-section w3-padding" type="submit" value="Register">        
    </div>
    </form>
</div>