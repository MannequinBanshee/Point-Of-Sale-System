<div class="w3-modal-content w3-round w3-card-4 w3-animate-zoom" style="max-width:600px">
    <span onclick="ToggleModal('NewClientModal');DeleteNewBarcodeFromElement('SelectAvailableBarcode')"
    class="w3-button w3-display-topright">&times;</span>
    <div class="w3-center"><br>
    <img src="assets/images/favorite.png" style="width:30%" class="w3-margin-top">
    <h2><b>New Client</b></h2> 
    </div>
    <form id="RegisterNewClientForm" class="w3-container" onsubmit="return false">
    <div class="w3-section">
        <table style="width:100%;">
            <tr>
                <td>
                    <label><b>First Name</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" autocomplete="off" type="text" placeholder="Enter First Name" name="firstname" readonly onfocus="this.removeAttribute('readonly');" required>
                </td>
                <td>
                    <label><b>Last Name</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" autocomplete="off" type="text" placeholder="Enter Last Name" name="lastname" readonly onfocus="this.removeAttribute('readonly');" required>                   
                </td>
            </tr>
        </table>

        <div id="NewClientBarcodes" style="margin-top: 20px;">
        </div>

        <div class="w3-center"><br>
            <h3>Optional</h3> 
        </div>
        <table style="width:100%;">
            <tr>
                <td>
                    <label><b>Cell Phone Number</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="number" autocomplete="off" placeholder="Enter Phone Number" name="cellnumber" readonly onfocus="this.removeAttribute('readonly');">
                </td>
                <td>
                    <label><b>Email Address</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="email" autocomplete="off" placeholder="Enter Email Address" name="email" readonly onfocus="this.removeAttribute('readonly');">    
                </td>
            </tr>
            <tr>
                <td>
                    <label><b>Identification Number</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="number" autocomplete="off" placeholder="Enter ID Number" name="idnumber" readonly onfocus="this.removeAttribute('readonly');">
                </td>
                <td>
                    <label><b>Starting Balance</b></label>
                    <input class="w3-input w3-border w3-margin-bottom" type="number" autocomplete="off" placeholder="Enter Stating Balance" name="balance" readonly onfocus="this.removeAttribute('readonly');">    
                </td>
            </tr>
        </table>

        <div style="float: right">
            <input class="w3-button w3-round w3-green w3-section w3-padding w3-round" onclick="ToggleModal('LoaderModal');ValidateNewClientForm();" type="submit" value="Create">    
        </div>
    </div>
    </form>

</div>